<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:paddingBottom="20dp">
    <!--任务信息-->
    <TextView
        android:id="@+id/tv_task_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="16dp"
        android:text="任务信息"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_address"
        android:drawablePadding="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="16dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        tools:text="亦城财富中心1号楼A座1008"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_info_title" />

    <TextView
        android:id="@+id/tv_bei_zhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_beizhu"
        android:drawablePadding="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="5.5dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        tools:text="日常保洁"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_time"
        android:drawablePadding="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="5.5dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        tools:text="2020-07-11  11:30-13:00"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bei_zhu" />

    <TextView
        android:id="@+id/tv_ju_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_juli"
        android:drawablePadding="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="5.5dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        tools:text="2.5KM"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_go_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.5dp"
        android:paddingLeft="13.5dp"
        android:paddingTop="2.5dp"
        android:paddingRight="13.5dp"
        android:paddingBottom="2.5dp"
        android:text="去导航"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_ju_li"
        app:layout_constraintLeft_toRightOf="@+id/tv_ju_li" />

</androidx.constraintlayout.widget.ConstraintLayout>