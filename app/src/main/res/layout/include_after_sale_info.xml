<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:paddingBottom="20dp">
    <!--售后状态信息-->


    <TextView
        android:id="@+id/tv_after_sate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="售后状态信息"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_after_sate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        tools:text="2020-07-08 12:00"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="用户发起售后"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_after_sate_time"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_after_sate_reason_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="原因"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_time" />

    <TextView
        android:id="@+id/tv_after_sate_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="态度不好，打碎了一个水杯"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_reason_title" />

    <TextView
        android:id="@+id/tv_after_sate_supplement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="7.5dp"
        android:paddingRight="15dp"
        tools:text="补款：50元"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_reason" />

    <TextView
        android:id="@+id/tv_after_sate_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_dddddd"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_supplement" />


    <TextView
        android:id="@+id/tv_after_sate_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        tools:text="2020-07-08 12:00"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="客服处理"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_after_sate_time_2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_after_sate_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        tools:text="同意退款"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_time_2" />

    <TextView
        android:id="@+id/tv_after_sate_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="态度不好，打碎了一个水杯"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_agree" />

    <TextView
        android:id="@+id/tv_after_sate_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_dddddd"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_explain" />


    <TextView
        android:id="@+id/tv_after_sate_time_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        tools:text="2020-07-08 12:00"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_sate_line_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="退款成功"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_after_sate_time_3"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>