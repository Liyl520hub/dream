<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:text="开始时间"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:text="结束时间"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />


    <TextView
        android:id="@+id/tv_apply_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:text="申请时间"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_time" />


    <TextView
        android:id="@+id/tv_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        tools:text="审批状态"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_apply_time" />

    <TextView
        android:id="@+id/tv_reason_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:text="申请理由"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_states" />

    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        tools:text="身体不舒服需要去医院检查一下，今天回不来了，麻烦领导审批"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reason_title" />


</androidx.constraintlayout.widget.ConstraintLayout>